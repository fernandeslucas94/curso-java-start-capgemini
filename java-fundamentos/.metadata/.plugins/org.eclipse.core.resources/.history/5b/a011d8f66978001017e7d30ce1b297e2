package conceitoPolimorfismo;

public class Principal {
	public static void main(String[] args) {
		Carro carro1 = new BMW();
		
		carro1.cor = "Branca";
		carro1.marca = "BMW";
		carro1.modelo = "x4";
		carro1.anoFabricacao = 2025;
		carro1.anoModelo = 2025;
		
	
		Carro carro2 = new Uno();
		
		carro2.cor = "Azul";
		carro2.marca = "Fiat";
		carro2.modelo = "Mille";
		carro2.anoFabricacao = 2004;
		carro2.anoModelo = 2004;
		
		System.out.println("PRIMEIRO CARRO");
		System.out.println(carro1.mostrarDadosCarro(carro1.cor, carro1.marca, carro1.modelo, carro1.anoFabricacao, carro1.anoModelo));
		
		System.out.println("-----------------------------------------");
		System.out.println("SEGUNDO CARRO");
		System.out.println(carro2.mostrarDadosCarro("", "", "", carro2.anoFabricacao, carro2.anoModelo));
		
	}
}
